{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opskarta.dev/schemas/opskarta.plan.schema.json",
  "title": "opskarta plan file",
  "type": "object",
  "required": [
    "version",
    "nodes"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "meta": {
      "type": "object",
      "required": [
        "id",
        "title"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "title": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": true
    },
    "statuses": {
      "type": "object",
      "additionalProperties": true
    },
    "nodes": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": [
          "title"
        ],
        "properties": {
          "title": {
            "type": "string"
          },
          "kind": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "parent": {
            "type": "string"
          },
          "after": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "start": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
            "description": "Planned start date in YYYY-MM-DD format"
          },
          "duration": {
            "type": "string",
            "pattern": "^[1-9][0-9]*[dw]$",
            "description": "Duration in days (d) or weeks (w), e.g. 5d, 2w"
          },
          "milestone": {
            "type": "boolean",
            "description": "If true, node is a milestone (point in time, not duration bar)"
          },
          "issue": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
