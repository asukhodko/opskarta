{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opskarta.dev/schemas/opskarta.views.schema.json",
  "title": "opskarta views file",
  "type": "object",
  "required": [
    "version",
    "project"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "project": {
      "type": "string",
      "minLength": 1,
      "description": "Must match meta.id from the plan file"
    },
    "gantt_views": {
      "type": "object",
      "description": "Gantt chart view definitions",
      "additionalProperties": {
        "type": "object",
        "description": "A single Gantt view",
        "properties": {
          "title": {
            "type": "string",
            "description": "View title displayed in the diagram"
          },
          "date_format": {
            "type": "string",
            "description": "Date format for Mermaid (e.g., 'YYYY-MM-DD'). Maps to Mermaid dateFormat directive."
          },
          "axis_format": {
            "type": "string",
            "description": "Axis date format for Mermaid (e.g., '%d %b'). Maps to Mermaid axisFormat directive."
          },
          "tick_interval": {
            "type": "string",
            "description": "Tick interval for Mermaid axis (e.g., '1week', '1day'). Maps to Mermaid tickInterval directive."
          },
          "excludes": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Calendar exclusions (e.g., 'weekends', specific dates)"
          },
          "lanes": {
            "type": "object",
            "description": "Swim lanes for grouping nodes",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string",
                  "description": "Lane title"
                },
                "nodes": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "Node IDs to display in this lane"
                }
              },
              "additionalProperties": true
            }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
